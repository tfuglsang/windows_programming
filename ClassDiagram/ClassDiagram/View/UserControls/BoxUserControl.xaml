    <StackPanel MinWidth="120" MinHeight="95">
        <TextBox x:Name="LabelList" Text="{Binding Label}" TextAlignment="Center" MinHeight="25" MinWidth="100" BorderThickness="0" Background="LightGray" Margin="0,0,0,10"/>
        <ListBox x:Name="FieldListBox" ItemsSource="{Binding FieldsList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MinHeight="25" MinWidth="100" BorderThickness="0" Background="LightGray" Margin="0,0,0,10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBox Text="{Binding Path=., Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" BorderThickness="0">
                        <TextBox.InputBindings>
                            <KeyBinding Command="{Binding ElementName=BoxUserControlName, Path=DataContext.addTextBoxCommand}" Key="Return" />
                            <KeyBinding Command="{Binding ElementName=BoxUserControlName, Path=DataContext.addTextBoxCommand}" Key="Enter" />
                        </TextBox.InputBindings>
                    </TextBox>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ListBox x:Name="MethodListBox"  ItemsSource="{Binding MethodList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MinHeight="25" MinWidth="100" BorderThickness="0" Background="LightGray">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBox Text="{Binding Path=., Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" BorderThickness="0">
                        <TextBox.InputBindings>
                            <KeyBinding Command="{Binding ElementName=BoxUserControlName, Path=DataContext.addTextBoxCommand}" Key="Return" />
                            <KeyBinding Command="{Binding ElementName=BoxUserControlName, Path=DataContext.addTextBoxCommand}" Key="Enter" />
                        </TextBox.InputBindings>
                    </TextBox>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </StackPanel>

</UserControl>
